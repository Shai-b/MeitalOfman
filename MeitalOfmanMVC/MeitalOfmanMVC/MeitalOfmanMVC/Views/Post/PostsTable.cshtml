@model IEnumerable<MeitalOfmanMVC.ContentDataModels.Post>

<div id="postsTable1">
    <table class="table table-striped ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Headline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostImages)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Headline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostImages.First().ImageName)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
