@model MeitalOfmanMVC.ContentDataModels.Post

@{
    ViewBag.Title = "Create Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="box tollbarBox">
        <div class="form-group row">
            @Html.LabelFor(model => model.Headline, new { @class = "col-2 col-form-label" })
            <div class="col-10">
                @Html.EditorFor(model => model.Headline, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group row">
           @Html.LabelFor(model => model.SubText, new { @class = "col-2 col-form-label" })
            <div class="col-10">
                @Html.TextAreaFor(model => model.SubText, new { @class = "form-control", @rows= 5})
            </div>
        </div>
        <div class="form-group row">

            <input class="form-control-file" type="file" name="files" id="files" accept="image/*" multiple />
        </div>

        <div class="btnTollbar">
            <input type="submit" value="Create" class="btn btn-default btn-primary" />
            <input type="button" value="Cancel" class="btn btn-default" />    
        </div>
    </div>
}